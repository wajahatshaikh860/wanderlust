<style>
/* Search bar container */
.navbar-search form {
  display: flex;
  width: 100%;
  max-width: 450px;
  background-color: #fff;
  border-radius: 50px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  transition: box-shadow 0.3s ease;
}

/* Input field */
.navbar-search input {
  flex: 1;
  border: none;
  padding: 0.5rem 1rem;
  font-size: 0.95rem;
  outline: none;
}

/* Placeholder style */
.navbar-search input::placeholder {
  color: #aaa;
}

/* Search button */
.navbar-search .btn-search {
  padding: 0 1.5rem;
  border-radius: 0;
  font-weight: 500;
  transition: background-color 0.3s ease;
}
.navbar-search .btn-search {
  background-color: #e03138;
}


.navbar-search .btn-search:hover {
  background-color: #e03138;
  color: white;
}
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left links -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Center search bar -->
      <div class="navbar-search mx-auto">
        <form class="d-flex w-100">
          <input class="form-control me-2" type="search" placeholder="Search listing" />
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i> Search
          </button>
        </form>
      </div>

      <!-- Right links -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add new listing</a>
        <% if(!currentUser){ %>
          <a class="nav-link" href="/signup"><b>Signup</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if(currentUser){ %>
          <a class="nav-link" href="/logout"><b>Logout</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
