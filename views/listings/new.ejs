<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            

    <h3>Create New Listings </h3>
    <form method="post" action="/listings" novalidate class="needs-validation">

        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input  
            name="listing[title]" 
            placeholder="Add a Catchy title" 
            type="text" 
            class="form-control" 
            required/>
            <div class="valid-feedback">Title looks good
            </div>
            <div class="invalid-feedback">
                Please enter a valid title
            </div>
        </div>
        
        <div class="mb-3">
             <lable for="description" class="form-label">Description</lable>
             <textarea name="listing[description]" placeholder="Enter Description here" class="form-control" required></textarea>
             <div class="valid-feedback">
                good description
             </div>
             <div class="invalid-feedback">
                Please enter a valid description
            </div>
        </div>
       
        <div class="mb-3">
             <lable for="image" class="form-label">Image</lable>
             <input  name="listing[image]" placeholder="Enter image URL/Link " type="text" class="form-control"/>
        </div>
       
        <div class="row">
        <div class="mb-3 col-md-4">
             <lable for="price" class="form-label">Price</lable>
            <input  name="listing[price]" placeholder="1200"  class="form-control" required/>
            <div class="invalid-feedback">
                Please enter a valid price
            </div>
        </div>
        
        <div class="mb-3 col-md-8">
             <lable for="location" class="form-label">Location</lable>
             <input  name="listing[location]" placeholder="Maharastra " type="text" class="form-control" required/>
             <div class="invalid-feedback">
                Please enter a valid location
            </div>
        </div>
        </div>
       
       <div class="mb-3">
         <lable for="country" class="form-label">Country</lable>
        <input  name="listing[country]" placeholder="India" type="text" class="form-control" required/>
        <div class="invalid-feedback">
            Please enter a valid country
            </div>
       </div>
        
        <button class="btn btn-dark add-btn mt-3">add</button>
       
    </form>
    </div>
    </div>

