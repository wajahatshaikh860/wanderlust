<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/stylesheets/starability.css">

<div class="container mt-4 mb-5 px-3">
  <div class="row g-4">
    <!-- Left Column: Image + Details + Edit/Delete -->
    <div class="col-12 col-lg-6">
      <h2 class="mb-3"><%= listing.title %></h2>
      <div class="mb-3">
        <img src="<%= listing.image.url %>" 
             class="img-fluid rounded-3" 
             style="width:500px; height:300px;" 
             alt="<%= listing.title %>">
      </div>

      <p class="text-muted">Owner by: <em><%= listing.owner.username %></em></p>
      <p><%= listing.description %></p>
      <p><strong>‚Çπ <%= listing.price %> / night</strong></p>
      <p class="mb-0"><%= listing.location %></p>
      <p><%= listing.country %></p>

      <!-- Edit & Delete buttons for owner -->
      <% if (currentUser && listing.owner && listing.owner.equals(currentUser._id)) { %>
        <div class="mt-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-dark btn-sm rounded-pill px-4 me-2">
            ‚úèÔ∏è Edit
          </a>
          <form 
            action="/listings/<%= listing._id %>?_method=DELETE" 
            method="POST" 
            class="d-inline"
            onsubmit="return confirm('Are you sure you want to delete this listing?');"
          >
            <button class="btn btn-outline-danger btn-sm rounded-pill px-4">
              üóëÔ∏è Delete
            </button>
          </form>
        </div>
      <% } %>
    </div>

    <!-- Right Column: Booking + Add Review -->
    <div class="col-12 col-lg-6">
      <!-- Booking Form -->
      <% if (!currentUser) { %>
        <div class="p-3 bg-light rounded-4 mb-4 text-center">
          <p>Please <a href="/login">log in</a> to book this hotel.</p>
        </div>
      <% } else { %>
        <div class="p-3 bg-light rounded-4 mb-4">
          <h5 class="mb-3 text-center">Book Your Stay</h5>
          <form action="/bookings/<%= listing._id %>/book" method="POST">
            <div class="mb-2">
              <label>Check-in:</label>
              <input type="date" name="checkin" class="form-control" required>
            </div>
            <div class="mb-2">
              <label>Check-out:</label>
              <input type="date" name="checkout" class="form-control" required>
            </div>
            <div class="mb-3">
              <label>Guests:</label>
              <input type="number" name="guests" class="form-control" min="1" value="1" required>
            </div>
            <button type="submit" class="btn btn-danger rounded-pill px-4 py-2 w-100">
              Confirm Booking
            </button>
          </form>
        </div>
      <% } %>

      <!-- Add Review Form -->
      <% if (currentUser) { %>
        <div class="p-3 bg-light rounded-4">
          <h5 class="mb-3 text-center">Add a Review</h5>
          <form action="/listings/<%= listing._id %>/reviews" method="POST">
            <fieldset class="starability-slot mb-3">
              <input type="radio" id="rate5" name="review[rating]" value="5" />
              <label for="rate5" title="Amazing">5 stars</label>

              <input type="radio" id="rate4" name="review[rating]" value="4" />
              <label for="rate4" title="Very good">4 stars</label>

              <input type="radio" id="rate3" name="review[rating]" value="3" />
              <label for="rate3" title="Average">3 stars</label>

              <input type="radio" id="rate2" name="review[rating]" value="2" />
              <label for="rate2" title="Not good">2 stars</label>

              <input type="radio" id="rate1" name="review[rating]" value="1" checked />
              <label for="rate1" title="Terrible">1 star</label>
            </fieldset>

            <div class="mb-3">
              <label>Comment:</label>
              <textarea name="review[comment]" class="form-control" rows="3" required></textarea>
            </div>
            <button class="btn btn-danger rounded-pill w-100">Submit Review</button>
          </form>
        </div>
      <% } else { %>
        <div class="p-3 bg-light rounded-4 mb-4 text-center">
          <p>Please <a href="/login">log in</a> to write a review.</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Full Width: All Reviews -->
  <div class="mt-5">
    <h5 class="fw-semibold mb-3 text-center">All Reviews</h5>
    <div class="list-group mb-4">
      <% listing.reviews.forEach(review => { %>
        <div class="list-group-item rounded-3 mb-2">
          <strong>@ <%= review.author.username %></strong>
          <div class="starability-result" data-rating="<%= review.rating %>"></div>
          <p class="mb-0 mt-1"><strong>Comment:</strong> <%= review.comment %></p>

          <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-2">
              <button class="btn btn-outline-danger btn-sm rounded-pill">üóëÔ∏è Delete</button>
            </form>
          <% } %>
        </div>
      <% }) %>
    </div>

    <!-- Back Button -->
    <div class="text-center">
      <a href="/listings" class="btn btn-outline-dark rounded-pill px-4">
        ‚Üê Back to Listings
      </a>
    </div>
  </div>
</div>
